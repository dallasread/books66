<% cache ["mobile", "full", story] do %>
<p class="byline"><%= "By #{story.user.name}" %></p>

<div id="share_links">

	<iframe allowtransparency="true" frameborder="0" scrolling="no" src="https://platform.twitter.com/widgets/tweet_button.html?text=<%= "Check Out \"#{story.name}\" on @66books" %>&amp;url=<%= quick_story_url(story.user.username, story) %>" style="width:100px; height:21px; margin-left: 50px;"></iframe>

	<iframe src="//www.facebook.com/plugins/like.php?href=<%= quick_story_url(story.user.username, story) %>&amp;send=false&amp;layout=button_count&amp;width=100&amp;show_faces=true&amp;action=like&amp;colorscheme=light&amp;font&amp;height=21&amp;appId=353498681390857" scrolling="no" frameborder="0" style="width:100px; height:21px;" allowTransparency="true"></iframe>
	
</div>

<div class="content">
	<%= story.content.html_safe %>
</div>
<% end %>